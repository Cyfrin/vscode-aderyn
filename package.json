{
  "name": "aderyn",
  "displayName": "Aderyn",
  "description": "Support for the Solidity programming language",
  "version": "0.1.0",
  "publisher": "cyfrin",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyfrin/vscode-aderyn"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "icon": "icon.png",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "aderyn.webview-providers.onboard-panel",
          "name": "Onboard View"
        }
      ]
    },
    "commands": [
      {
        "command": "aderyn.commands.restartServer",
        "title": "Restart Aderyn Server",
        "category": "Aderyn"
      }
    ]
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "//": "Production",
    "vscode:prepublish": "webpack --mode production",
    "vscode:package": "vsce package",

    "//": "Dev Build (One time)",
    "compile": "concurrently \"npm run ext\" \"npm run tw:all\" \"npm run svelte:all\" ",

    "//": "Dev Iterative Build (Watch mode)",
    "compile-watch": "concurrently \"npm run ext:watch\" \"npm run tw:watch:all\" \"npm run svelte:watch:all\" ",

    "//": "Extension build (One time)",
    "ext": "webpack --mode development",

    "//": "Extension build (Watch mode)",
    "ext:watch": "webpack --mode development --watch",

    "//": "Tailwind class extraction (One time)",
    "tw:": "npx @tailwindcss/cli -i media/unprocessed/$npm_config_file.css -o media/rolled-up/$npm_config_file.css",
    "tw:all": "npm run tw --file=tailwind",

    "//": "Tailwind class extraction (Watch mode)",
    "tw:watch": "npx @tailwindcss/cli -i media/unprocessed/$npm_config_file.css -o media/rolled-up/$npm_config_file.css --watch",
    "tw:watch:all": "npm run tw:watch --file=tailwind",

    "//": "Svelte compile (One time)",
    "svelte:all": "rollup -c",

    "//": "Svelte compile (Watch mode)",
    "svelte:watch:all": "rollup -c -w",

    "//": "Formatting + Testing utils",
    "test-compile": "tsc -p ./",
    "prettier:check": "prettier --list-different 'src/**/*.{js,jsx,ts,tsx}'",
    "prettier:fix": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@tailwindcss/vite": "^4.0.5",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": ">=11",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@vscode/vsce": "^2.29.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^7.32.0",
    "glob": "^7.1.6",
    "globals": "^15.9.0",
    "mocha": "^10.1.0",
    "postcss": "^8.5.2",
    "prettier": "3.4.2",
    "rollup-plugin-import-css": "^3.5.8",
    "rollup-plugin-svelte": "^7.2.2",
    "svelte": "^5.19.9",
    "ts-loader": "^8.0.13",
    "typescript": "^4.1.2",
    "typescript-eslint": "^8.5.0",
    "vscode-test": "^1.4.1",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.5",
    "dotenv": "^16.4.5",
    "follow-redirects": "^1.15.9",
    "node-uname": "^3.1.1",
    "tailwindcss": "^4.0.5",
    "tar": "^7.4.3",
    "vscode-languageclient": "^8.1.0"
  }
}
